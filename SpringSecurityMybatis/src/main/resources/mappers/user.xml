<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.SpringSecurityMybatis.repository.UserMapper">
    <select id="findByUsername"
            resultType="com.study.SpringSecurityMybatis.entity.User">
        select
            id,
            username,
            password,
            name
        from
            user
        where
            username =#{username}
    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id"> <!-- useGeneratedKeys = A쓰는 애 / keyProperty = AI가 저장이 됨 - entity에 있는 key값의 주소명-->
        insert into user
        values(default, #{username}, #{password}, #{name})
    </insert>
</mapper>